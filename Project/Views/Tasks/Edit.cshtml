@model Project.Models.TaskItem

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm" style="background-color: #f5f7fa; border-radius: 8px;">
                <div class="card-body p-4">
                    <h1 class="fw-bold text-center mb-3" style="font-size: 1.5rem;">Edit Task</h1>

                    <hr class="mx-auto" style="width: 80%; margin: 0.5rem auto 1.5rem;" />

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-2">
                            <label asp-for="Title" class="control-label small"></label>
                            <input asp-for="Title" class="form-control form-control-sm" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Description" class="control-label small"></label>
                            <textarea asp-for="Description" class="form-control form-control-sm" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="DueDate" class="control-label small"></label>
                            <input asp-for="DueDate" class="form-control form-control-sm" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Status" class="control-label small"></label>
                            <select asp-for="Status" class="form-control form-control-sm" asp-items="ViewBag.Statuses">
                                <option value="">Select Status</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Remarks" class="control-label small"></label>
                            <div class="d-flex gap-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Remarks" value="Yes" id="RemarksYes" />
                                    <label class="form-check-label small" for="RemarksYes">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Remarks" value="No" id="RemarksNo" />
                                    <label class="form-check-label small" for="RemarksNo">No</label>
                                </div>
                            </div>
                            <span asp-validation-for="Remarks" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="CreatedOn" class="control-label small"></label>
                            <input asp-for="CreatedOn" class="form-control form-control-sm" readonly />
                            <span asp-validation-for="CreatedOn" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="LastUpdatedOn" class="control-label small"></label>
                            <input asp-for="LastUpdatedOn" class="form-control form-control-sm" />
                            <span asp-validation-for="LastUpdatedOn" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="CreatedById" class="control-label small"></label>
                            <select asp-for="CreatedById" class="form-control form-control-sm" asp-items="ViewBag.Users">
                                <option value="">Select User</option>
                            </select>
                            <span asp-validation-for="CreatedById" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastUpdatedById" class="control-label small"></label>
                            <select asp-for="LastUpdatedById" class="form-control form-control-sm" asp-items="ViewBag.Users">
                                <option value="">Select Last by User</option>
                            </select>
                            <span asp-validation-for="LastUpdatedById" class="text-danger small"></span>
                        </div>

                        <div class="form-group d-flex justify-content-center gap-2 mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">Back</a>
                            <input type="submit" value="Save" class="btn btn-primary btn-sm px-3" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
